    "electron-packager": "^5.2.1",
    "electron-prebuilt": "^0.37.2",
    "enzyme": "^2.1.0",
    "eslint": "^2.8.0",
    "eslint-config-airbnb": "^7.0.0",
    "eslint-plugin-jsx-a11y": "^0.6.2",
    "eslint-plugin-react": "^4.3.0",
    "expect": "^1.15.2",
